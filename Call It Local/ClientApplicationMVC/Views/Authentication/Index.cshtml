<!--
    This is the html page that opens when a user navigates or is redirected
    to the log in page
-->

<script type="text/javascript" src="~/Scripts/Authentication/AuthenticationFunctions.js"></script>

@{
    ViewBag.Title = "Log In";
}

<h2>@ViewBag.Title</h2>
<h3>@ViewBag.Message</h3>

<!-- The remainder of this file is to be completed by students in milestone 2 -->

@using (Html.BeginForm("LogIn", "Authentication", FormMethod.Get,
    new { id = "credentialForm", onsubmit = "return validatecredentialForm()" }))
{
    <br />
    <label for="username">Username:</label>
    @Html.TextBox("Username")
    <br />
    <label for="password">Password:</label>
    @Html.Password("Password")
    <br />
    <input type="submit" value="Log In" />
    <br />
    <a href="http://localhost:57469/Authentication/CreateAccount/">Create an Account?</a>
    <br />
    <p>@ViewBag.LoginResponse</p>
    <br />
}